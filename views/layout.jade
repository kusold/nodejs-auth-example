doctype 5
html
  head
    title= title
    if locals.stylesheet
      link(rel='stylesheet', href='/stylesheets/#{stylesheet}')
    link(rel='stylesheet', href='/stylesheets/style.css')
    <!-- compiled and minified CSS -->
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css', rel='stylesheet')
 
    <!-- compiled and minified JavaScript -->
    script(src='//code.jquery.com/jquery-1.10.1.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/js/bootstrap.min.js')
  body
    .navbar(class='navbar-fixed-top')
      .container
        button.navbar-toggle(data-toggle='collapse', data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Secret Envelope
        .nav-collapse(class='collapse')
          ul.nav(class='navbar-nav')
            li.active
              a(href='/') Home
          ul.nav(class='navbar-nav pull-right')
            if locals.user
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown') #{user.username}
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='/logout') Logout
            else
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown') Account
                  b.caret 
                ul.dropdown-menu
                  li
                    a(href='/login') Login
                  li
                    a(href='/register') Register
    
    .container
      - var flashTypes = ['info', 'error']
      each flashType in flashTypes
        if flash[flashType]
          p.flash(class='alert alert-#{flashType}')
            = flash[flashType]

       block content
